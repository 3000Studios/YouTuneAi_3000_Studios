# Theme Manager Environment Configuration
# Copy this file to .env and configure as needed

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/theme_manager.log

# Theme Settings
THEMES_DIR=themes
MAX_THEME_SIZE=524288000  # 500 MB in bytes
MAX_FILE_SIZE=10485760    # 10 MB in bytes

# Security Settings
ENABLE_SECURITY_SCAN=true
SCAN_TIMEOUT=300  # seconds
STRICT_VALIDATION=true

# Performance Settings
WORKER_THREADS=4
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=60  # seconds
